<!DOCTYPE html>
<html>
<head>
    <%- include ../common/head.ejs %>
</head>

    <%- include ../common/nav.ejs %>

<body>

    <div class="container">
        <h1>회원목록 입니다</h1>
    
        <table class="table table-hover">
            <tr>
                <th>id</th>
                <th>이름</th>
                <th>나이</th>
                <th>성별</th>
                <th>가입날짜</th>
            </tr>
            <% for(var user of users){ %>
                <tr>
                    <td>
                        <a href="/user/detail?no=<%=user.no%>">
                            <%= user.id %>
                        </a>
                    </td>
                    <td><%= user.name %></td>
                    <td><%= user.age %></td>
                    <td><%= user.gender %></td>
                    <td><%= user.reg_date %></td>
                </tr>
            <% } %>
        </table>
    </div>

    <%- include ../common/js.ejs %>

</body>
</html>